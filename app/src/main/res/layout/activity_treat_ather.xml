<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_treat_ather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#757575"
        android:ellipsize="end"
        android:maxLines="2"
        android:textStyle="bold"
        android:text="\t การรักษาโรคหลอดเลือดหัวใจ"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/treat_ath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="30"
        android:text="@string/treat_ath"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="แหล่งที่มา"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#304FFE"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="https://www.bumrungrad.com/th/heart-cardiology-center-treatment-surgery-bangkok-thailand/conditions/coronary-artery-disease#Treatments"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ajob"/>
</LinearLayout>
