        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="30"
        android:text="@string/sym_ather"
        android:textColor="#000000"
        android:textSize="14sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
